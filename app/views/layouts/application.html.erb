<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Fake LetterPress" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Fake LetterPress" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%# render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          <%- if current_user -%>
            Logged in as <%= current_user.name %> | <%= link_to 'Logout', destroy_user_session_path %>
          <%- else -%>
            <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
          <%- end -%>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
